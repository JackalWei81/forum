  <% if @topic.errors.any? %>
      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

  <!-- name->topic -->
  <div class="form-group">
    <%= f.label :name, "Topic" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <!-- description->content -->
  <div class="form-group">
    <%= f.label :description, "Content" %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>